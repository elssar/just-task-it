	"item": [
		{
			"name": "health",
			"item": [
				{
					"name": "Basic health check",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"",
									"pm.test(\"Response is a JSON object\", function () {",
									"    pm.expect(pm.response.json()).to.be.an('object');",
									"});",
									"",
									"",
									"pm.test(\"Response has a property named 'status'\", function () {",
									"    pm.expect(pm.response.json()).to.have.property('status');",
									"});",
									"",
									"",
									"pm.test(\"Status property is a string\", function () {",
									"    pm.expect(pm.response.json().status).to.be.a('string');",
									"});",
									"",
									"",
									"pm.test(\"Status property value is equal to 'OK'\", function () {",
									"    pm.expect(pm.response.json().status).to.equal(\"OK\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Accept",
								"value": "application/json"
							}
						],
